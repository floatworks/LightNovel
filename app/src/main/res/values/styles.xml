<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="Transparent" parent="MainTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="tab_bar">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_noshape</item>
        <item name="android:textColor">@drawable/tv_tab_color</item>
        <item name="android:button">@null</item>
    </style>
    <style name="textView_detail">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">1dip</item>
        <item name="android:lines">1</item>
    </style>
    <style name="btn_shape_detail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tv_tab_color</item>
        <item name="android:background">@drawable/bg_shape</item>
    </style>
    <style name="btn_shape_detail_s" parent="btn_shape_detail">
        <item name="android:background">@drawable/bg_shape_s</item>
        <item name="android:textColor">@drawable/tv_tab_color_s</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:progressBarStyle">?android:progressBarStyle</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="tabrow_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_noshape_tabrow</item>
        <item name="android:clickable">true</item>
    </style>
    
    <!--分割线-->
    <style name="view_v">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="view_h">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BtnTheme" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:minHeight">20dp</item>
        <item name="android:textColor">@drawable/tv_tab_color</item>
        <item name="android:background">@drawable/bg_shape_small</item>
    </style>
    <style name="BtnTheme_s" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:minHeight">20dp</item>
        <item name="android:textColor">@drawable/tv_tab_color_s</item>
        <item name="android:background">@drawable/bg_shape_s_small</item>
    </style>
</resources>
